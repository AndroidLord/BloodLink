<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailActivity">


    <LinearLayout
        android:id="@+id/userLinearLayout_UserDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar_UserDetail"
            app:titleTextColor="@color/red"

            android:background="@color/red"
            android:elevation="5dp"
            app:menu="@menu/userdetailmenu"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    app:cardCornerRadius="50dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="100dp"
                        >
                        <ImageView
                            android:id="@+id/userImageView_UserDetail"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/user"/>
                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>


                <EditText
                    android:id="@+id/userNameEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="19sp"
                    android:autofillHints="name"
                    android:importantForAutofill="auto"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="User Name"
                    android:background="@drawable/background_edit_text"/>

                <EditText
                    android:id="@+id/phoneNoEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="22dp"
                    android:inputType="number"
                    android:textColorLink="@color/red"
                    android:autoLink="phone"
                    android:background="@drawable/background_edit_text"
                    android:hint="Phone No."
                    android:importantForAutofill="auto"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/emailEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints="emailAddress"
                    android:importantForAutofill="auto"
                    android:inputType="textEmailAddress"
                    android:textSize="19sp"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="Email"
                    android:background="@drawable/background_edit_text"/>

                <EditText
                    android:id="@+id/ageEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints="age"
                    android:importantForAutofill="auto"
                    android:inputType="number"
                    android:textSize="19sp"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="Age"
                    android:background="@drawable/background_edit_text"/>

                <EditText
                    android:id="@+id/bloodGroupEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="19sp"
                    android:padding="12dp"
                    android:layout_marginTop="22dp"
                    android:hint="Blood Group+"
                    android:background="@drawable/background_edit_text"
                    />

                <EditText
                    android:id="@+id/genderEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="19sp"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="Gender"
                    android:background="@drawable/background_edit_text"/>

                <EditText
                    android:id="@+id/countryEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="19sp"
                    android:importantForAutofill="auto"
                    android:autofillHints="postalAddress"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="Country"
                    android:background="@drawable/background_edit_text"/>

                <EditText
                    android:id="@+id/stateEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="19sp"
                    android:autofillHints="postalAddress"
                    android:importantForAutofill="auto"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="State"
                    android:background="@drawable/background_edit_text"/>

                <EditText
                    android:id="@+id/cityEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="19sp"
                    android:autofillHints="postalAddress"
                    android:importantForAutofill="auto"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="City"
                    android:background="@drawable/background_edit_text"/>

                <EditText
                    android:id="@+id/postalCodeEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="19sp"
                    android:autofillHints="postalCode"
                    android:importantForAutofill="auto"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="Postal Code"
                    android:background="@drawable/background_edit_text"/>

                <EditText
                    android:id="@+id/userDescriptionEditText_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="description"
                    android:importantForAutofill="auto"
                    android:inputType="textMultiLine"
                    android:textSize="19sp"
                    android:padding="12dp"
                    android:singleLine="true"
                    android:layout_marginTop="22dp"
                    android:hint="About Your Self..."
                    android:background="@drawable/background_edit_text"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/updateButton_UserDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save User Profile"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:padding="12dp"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="#3897f0"
                    android:layout_marginBottom="20dp"
                    app:cornerRadius="4dp"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>