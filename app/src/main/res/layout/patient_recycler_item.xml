<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/imageView_item"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_launcher_background"
                    android:contentDescription="Image profile"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/patient_title_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Need O+ Blood Donar"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/location_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gomti Nagar, Lucknow"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    />
                <TextView
                    android:id="@+id/postedOn_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Posted on: 05:45, 14/03/23"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/dueTime_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Due Date: tommorow"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/description_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description: My brother had an acident late night and is urgent need of blood. Please Help! ðŸ™ðŸ™"
                    android:maxLines="3"
                    android:textSize="15sp"
                    />

                <TextView
                    android:id="@+id/author_item"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Posted by - Atharva"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    />

            </LinearLayout>





        </LinearLayout>

</androidx.cardview.widget.CardView>